total = 0
count = 0

while True:
    user_input = input("Enter an integer (or 'done' to exit): ")

    if user_input == 'done':
        break

    try:
        number = int(user_input)
        total += number
        count += 1
        average = total / count
        print("Average:", average)
    except ValueError:
        print("Invalid input. Please enter an integer or 'done'.")

print("Program terminated.")
